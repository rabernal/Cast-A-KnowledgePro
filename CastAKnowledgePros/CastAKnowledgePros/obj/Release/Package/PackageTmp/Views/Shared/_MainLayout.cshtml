<!DOCTYPE html>
@*@model IEnumerable<CastAKnowledgePros.Models.VideoModel>*@

@*INFORMATION: CSS row marging was changed in bootstrap.css 1612
    : CSS row padding was changed in bootstrap.css 1616*@
<html>
<head>
    @*<meta name="viewport" content="width=device-width" />*@
    <meta charset="utf-8" />
    @*<link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>*@
    @*<link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'  rel='stylesheet' type='text/css' />*@
    @*<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>*@
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0; m">
    <title>@ViewBag.Title - My Video's Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    @*nav color was change in bootstrap.css line 4639*@



    <header id="top">
        <nav class="navbar navbar-inverse navbar-fixed-top cbp-af-header"
             role="navigation">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed"
                            data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a id="logo" href="#top">
                        <img src="~/images/logo1.png" /><span>ast-A-Knowledge.Com</span>
                    </a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#top">Home</a></li>
                        <li><a href="#aboutus">About Us</a></li>
                        <li><a href="#tutorials">Tutorials</a></li>
                        <li><a href="#media">Media</a></li>
                        <li><a href="#contact-us">Contact Us</a></li>
                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>

        <div class="down-button ">
            <a class="btn" href="#tutorials">
                <i class="glyphicon glyphicon-chevron-down fa-3x bottom"></i>
            </a>
        </div>
    </header>

    <section class="container-fluid">
        <section class=" row ">
            <div id="carousel" class="title-row carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel" data-slide-to="1"></li>
                    <li data-target="#carousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img class="img-responsive" src="../../images/horn.jpg" alt="Clouds with volcano" data-stellar-background-ratio=" 0.2">
                        <div class="carousel-caption">
                            <h3 class="wow zoomInDown">Find Useful Tutorials</h3>
                            <p class="wow zoomInDown">
                                Looking for step by step troubleshooting tutorials? Check out our videos.
                            </p>
                            @*<img class="img-responsive title-image" src="~/images/log.png" alt="this is s temp image" />*@
                        </div>
                    </div>
                    <div class="item">
                        <img class="img-responsive" src="../../images/oldTV.jpg" alt="Foggy Image">
                        <div class="carousel-caption">
                            <h3 class="wow bounceInDown">Please Vist my YouTube Channel</h3>
                            <p class="wow bounceInDown">You will find useful video tutorias that can help fix and issue and learn something new</p>
                        </div>
                    </div>

                    <div class="item ">
                        <img class="img-responsive" src="../../images/porteria.jpg" alt="Eagle in the foggy mountain">
                        <div class="carousel-caption">
                            <h3 class="wow bounceInDown">Are you a beginner?</h3>
                            <p class="wow bounceInDown">Are you a college student in need of ideas for a capstone project? This is the right place for you.</p>
                        </div>
                    </div>

                </div>


                <!-- Controls -->
                <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>
    </section>

    <section id="aboutus" class="row">
        <h2 class="welcomeTitle">WELCOME TO CAST-A-KNOWLEGE!!</h2>
        <div class="text-banner">
            <p>
                Cast-A-Knowledge website was created with the purpose of sharing video tutorials about a variety of different topics such as web development, do it yourself troubleshooting, and information.
                Most of The videos contained on this webiste are inteded to assist beginners in programming.  The videos shown here are based on personal exposure to the specific topics. Please stay tuned for
                upcoming videos.  For additional information please visit my youtube channel.
            </p>
        </div>
    </section>


    <section id="media" class="row">
        <div class="fill-screen fixed-attachment background-image-size " style="background-image: url(../../images/flowersFog.jpg)">

        </div>
    </section>

    <section id="tutorials" class="row ">
        @RenderBody()
    </section>


    <section class="row">
        <div class="fill-screen fixed-attachment" style="height: 400px; background-image: url(../../images/openSea.jpg)">
        </div>
    </section>

    <section class="container-fluid">
        <section id="contact-us" class="row contact-us wow fadeInDown">

            @{
                ViewBag.Title = "Contact Us";
            }
            <h2>@ViewBag.Title.</h2>
            <h3>@ViewBag.Message</h3>

            <address>
                For suggestions and comments
                Visit YouTube Channel<br />
            </address>

            <address>
                <strong>YouTube Channel:</strong><a href="https://www.youtube.com/channel/UCy6cI5xNGTsNDC26InDI0Tg/videos?view_as=public" target="_blank"><i><img src="~/images/YouTube-social-square_red_24px.png" /></i></a><br />
            </address>

        </section>
    </section>

    <footer>
        <h3>Castaknowledge.com</h3>
        <p>&copy; @DateTime.Now.Year - Cast-A-Knowledge.com Author:<a href="@Url.Action("Admin")">R.B.</a></p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/mySelection")


</body>
</html>


