@{ var comment = "";}
<div id="displayVideoList">
    <section class="col-xs-12 col-sm-9 col-sm-pull-3" id="myVid">

        @foreach (var item in Model)
        {

            <section class="col-xs-12 col-sm-6 " id="myVid" >
                @*@item.VidTitle*@
                <div class="col-xs-6 col-sm-12" id="myVid">

                    <iframe width="100%"
                            height="100%"
                            src="@Html.DisplayFor(modelItem => item.VidSource)"
                            frameborder="0"
                            allowfullscreen></iframe>

                </div>

                @{
                    // this is use to redirect to comment section on youtube.
                    comment = item.VidSource.Replace("embed/", "watch?v=");
                }

                <div class="col-xs-6 col-sm-12 video-description">
                    <h5>@item.VidDescription</h5>
                    <article>
                        <p>Add comment:<b><a href="@comment" target="_blank"><mark>here</mark></a></b></p>
                        <p>Checkout YouTube Channel..<a href="https://www.youtube.com/channel/UCy6cI5xNGTsNDC26InDI0Tg/videos?view_as=public" target="_blank"><i><img src="~/images/YouTube-social-square_red_24px.png" /></i></a> </p>
                        <script src="https://apis.google.com/js/platform.js"></script>
                        <div class="g-ytsubscribe" data-channel="GoogleDevelopers" data-layout="default" data-count="default"></div>
                    </article>
                </div>


            </section>

